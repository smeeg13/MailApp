<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Fragments.AddNewFragment">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/AddButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00BCD4"
        android:clickable="true"
        android:contentDescription="@string/edit"
        android:src="@drawable/ic_baseline_edit_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.954"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976" />

    <Switch
        android:id="@+id/AddAssignedToSwitch"
        android:layout_width="177dp"
        android:layout_height="48dp"
        android:layout_gravity="start|top"
        android:layout_marginTop="16dp"
        android:showText="true"
        android:text="@string/assigned_to_me"
        android:textOff="@string/no"
        android:textOn="@string/yes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.168"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <TextView
        android:id="@+id/AddMailFromTextView"
        android:layout_width="139dp"
        android:layout_height="20dp"
        android:layout_marginTop="84dp"
        android:text="@string/mail_from"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/AddMailToTextView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/AddMailToTextView"
        android:layout_width="138dp"
        android:layout_height="21dp"
        android:layout_marginTop="84dp"
        android:text="@string/mail_to"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/AddMailFromTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/AddMailFromEditText"
        android:layout_width="137dp"
        android:layout_height="48dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/name"
        android:inputType="textPersonName"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="@+id/AddMailFromTextView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/AddMailFromTextView"
        app:layout_constraintTop_toBottomOf="@+id/AddMailFromTextView"
        tools:ignore="TouchTargetSizeCheck,DuplicateSpeakableTextCheck" />

    <EditText
        android:id="@+id/AddMailToEditText"
        android:layout_width="137dp"
        android:layout_height="48dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/name"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="@+id/AddMailToTextView"
        app:layout_constraintStart_toStartOf="@+id/AddMailToTextView"
        app:layout_constraintTop_toBottomOf="@+id/AddMailToTextView" />

    <EditText
        android:id="@+id/AddAddressEditText"
        android:layout_width="304dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/address"
        android:inputType="textPostalAddress"
        android:minHeight="48dp"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="@+id/AddAddressTextView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/AddAddressTextView"
        app:layout_constraintTop_toBottomOf="@+id/AddAddressTextView"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/AddZipEditText"
        android:layout_width="104dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/zip"
        android:inputType="number|textPostalAddress"
        android:minHeight="48dp"
        android:textSize="17sp"
        app:layout_constraintEnd_toStartOf="@+id/AddCityEditText"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/AddAddressEditText"
        app:layout_constraintTop_toBottomOf="@+id/AddAddressEditText"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/AddCityEditText"
        android:layout_width="206dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="52dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/city"
        android:inputType="textPostalAddress"
        android:minHeight="48dp"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AddAddressEditText"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/AddShipDateTextView"
        android:layout_width="211dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:text="@string/due_date_for_shipping"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/AddShipTypeTextView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/AddAMailRadioBtn"
        app:layout_constraintTop_toBottomOf="@+id/AddBMailRadioBtn" />

    <RadioButton
        android:id="@+id/AddAMailRadioBtn"
        android:layout_width="90dp"
        android:layout_height="48dp"
        android:text="@string/a_mail"
        app:layout_constraintStart_toStartOf="@+id/AddShipTypeTextView"
        app:layout_constraintTop_toBottomOf="@+id/AddShipTypeTextView" />

    <RadioButton
        android:id="@+id/AddBMailRadioBtn"
        android:layout_width="90dp"
        android:layout_height="48dp"
        android:text="@string/b_mail"
        app:layout_constraintEnd_toStartOf="@+id/AddRecomMailRadioBtn"
        app:layout_constraintStart_toEndOf="@+id/AddAMailRadioBtn"
        app:layout_constraintTop_toBottomOf="@+id/AddShipTypeTextView" />

    <EditText
        android:id="@+id/AddWeightEditText"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_marginEnd="48dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/weight"
        android:inputType="numberDecimal"
        android:textColorHint="#757575"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AddMailTypeTextView" />

    <RadioButton
        android:id="@+id/AddLetterRadioBtn"
        android:layout_width="109dp"
        android:layout_height="48dp"
        android:text="@string/letter"
        app:layout_constraintEnd_toStartOf="@+id/AddPackageRadioBtn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/AddMailTypeTextView"
        app:layout_constraintTop_toBottomOf="@+id/AddMailTypeTextView" />

    <RadioButton
        android:id="@+id/AddPackageRadioBtn"
        android:layout_width="109dp"
        android:layout_height="48dp"
        android:layout_marginEnd="4dp"
        android:text="@string/packages"
        app:layout_constraintEnd_toStartOf="@+id/AddWeightEditText"
        app:layout_constraintTop_toBottomOf="@+id/AddMailTypeTextView" />

    <TextView
        android:id="@+id/AddMailTypeTextView"
        android:layout_width="211dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:text="@string/mail_type"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/AddMailToEditText"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/AddMailFromEditText"
        app:layout_constraintTop_toBottomOf="@+id/AddMailFromEditText" />

    <RadioButton
        android:id="@+id/AddRecomMailRadioBtn"
        android:layout_width="131dp"
        android:layout_height="48dp"
        android:layout_marginEnd="44dp"
        android:text="@string/recommended"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AddShipTypeTextView" />

    <TextView
        android:id="@+id/AddShipTypeTextView"
        android:layout_width="211dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:text="@string/shipping_type"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/AddMailTypeTextView"
        app:layout_constraintTop_toBottomOf="@+id/AddPackageRadioBtn" />

    <TextView
        android:id="@+id/AddAddressTextView"
        android:layout_width="211dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:text="@string/address"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/AddShipDateEditText"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/AddShipDateEditText"
        app:layout_constraintTop_toBottomOf="@+id/AddShipDateEditText" />

    <Button
        android:id="@+id/AddMailBtn"
        android:layout_width="254dp"
        android:layout_height="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/btn_bg"
        android:backgroundTint="@color/white"
        android:text="@string/add_mail"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="@color/black" />

    <TextView
        android:id="@+id/AddShipDateEditText"
        android:layout_width="209dp"
        android:layout_height="28dp"
        android:layout_marginTop="4dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/AddShipDateTextView"
        app:layout_constraintStart_toStartOf="@+id/AddShipDateTextView"
        app:layout_constraintTop_toBottomOf="@+id/AddShipDateTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>