<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="ui.Fragments.HomeFragment">


    <!-- TODO: Update blank fragment layout -->


    <ImageButton
        android:id="@+id/mapFilterBtn"
        android:layout_width="76dp"
        android:layout_height="50dp"
        android:layout_gravity="start"
        android:contentDescription="Filter"
        android:src="@drawable/ic_baseline_filter_alt_24"
        app:layout_constraintEnd_toStartOf="@+id/HomeSearchBar"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SearchView
        android:id="@+id/HomeSearchBar"
        android:layout_width="301dp"
        android:layout_height="38dp"
        android:layout_marginTop="4dp"
        android:background="#D7DADADA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/mapFilterBtn"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/HomeTodayScrollView"
        android:layout_width="386dp"
        android:layout_height="606dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/HomeSeeAllMailsBtn">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:text="Your Progression : "
        android:textColor="#000000"
        app:layout_constraintEnd_toStartOf="@+id/HomeProgressBar"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mapFilterBtn" />

    <Button
        android:id="@+id/HomeSeeAllMailsBtn"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/btn_bg"
        android:backgroundTint="@color/white"
        android:text="See All"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/HomeProgressBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/HomeProgressBar"
        app:layout_constraintTop_toTopOf="@+id/HomeProgressBar"
        app:layout_constraintVertical_bias="0.697"
        app:rippleColor="@color/black" />

    <ProgressBar
        android:id="@+id/HomeProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="158dp"
        android:layout_height="31dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toStartOf="@+id/HomeSeeAllMailsBtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/HomeSearchBar" />


</androidx.constraintlayout.widget.ConstraintLayout>